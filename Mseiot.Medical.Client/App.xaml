<Application x:Class="MM.Medical.Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lc="clr-namespace:MM.Medical.Client.Converters"
             xmlns:controls="clr-namespace:Ms.Controls;assembly=Ms.Controls"
             xmlns:converters="clr-namespace:MM.Medical.Share.Converters;assembly=MM.Medical.Share"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             Startup="Application_Startup">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Ms.Controls;component/Themes/Generic_Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MM.Medical.Share;component/Themes/Images.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MM.Medical.Share;component/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:EnumToIntConverter x:Key="EnumToIntConverter"/>
            <converters:EnumToStringConverter x:Key="EnumToStringConverter"/>
            <lc:TimeStampIsTodayConverter x:Key="TimeStampIsTodayConverter"/>
            <lc:PatientStatusToColorConverter x:Key="PatientStatusToColorConverter"/>
            <lc:AppointmentStatusToColorConverter x:Key="AppointmentStatusToColorConverter"/>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:TimeStampToDateTimeConverter x:Key="TimeStampToDateTimeConverter"/>
            <converters:TimeStampToStringFormatConverter x:Key="TimeStampToStringFormatConverter"/>
            <converters:IntToFormatString x:Key="IntToFormatStringConverter"/>
            <converters:ReverseBooleanConverter x:Key="ReverseBooleanConverter"/>
            <converters:ObjectEqualParamConverter x:Key="ObjectEqualParamConverter"/>
            <lc:PathToWebUrlConverter x:Key="PathToWebUrlConverter"/>
            <converters:YNToCNConvert x:Key="YNToCNConvert"/>
            <converters:SexConverter x:Key="SexConverter"/>

            <sys:Double x:Key="InputElementHeight">36</sys:Double>
            <sys:Double x:Key="InputElementWidth">180</sys:Double>
            <sys:Double x:Key="ButtonHeight">32</sys:Double>
            <sys:Double x:Key="DataGrdiColumnHeight">48</sys:Double>
            <sys:Double x:Key="DataGrdiRowHeight">40</sys:Double>
            <sys:Double x:Key="MicroFontSize">12</sys:Double>
            <sys:Double x:Key="SmallFontSize">14</sys:Double>
            <sys:Double x:Key="NormalFontSize">16</sys:Double>
            <sys:Double x:Key="LargeFontSize">18</sys:Double>
            <sys:Double x:Key="NavigateFontSize">20</sys:Double>
            <sys:Double x:Key="LargeExFontSize">24</sys:Double>

            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="Foreground" Value="{DynamicResource Color_Font_Primary}"/>
            </Style>
            <Style TargetType="{x:Type StackPanel}" x:Key="editorFormItem">
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Orientation" Value="Horizontal"/>
            </Style>
            <Style TargetType="{x:Type TextBlock}" x:Key="editorFormItemText" BasedOn="{StaticResource {x:Type TextBlock}}">
                <Setter Property="Width" Value="80"/>
                <Setter Property="TextAlignment" Value="Right"/>
                <Setter Property="Margin" Value="0,0,10,0"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            <Style TargetType="{x:Type TextBox}" x:Key="editorFormItemInput" BasedOn="{StaticResource {x:Type TextBox}}">
                <Setter Property="Width" Value="200"/>
            </Style>
            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource Button_Primary}">
                <Setter Property="Foreground" Value="{DynamicResource Color_Font_Light}"/>
            </Style>
            <Style TargetType="{x:Type ToggleButton}" BasedOn="{StaticResource DefaultToggleButtonStyle}">
                <Setter Property="Foreground" Value="{DynamicResource Color_Font_Light}"/>
            </Style>
            <Style TargetType="{x:Type ListBox}" BasedOn="{StaticResource DefaultListBoxStyle}"/>
            <Style TargetType="{x:Type controls:CustomGroupBox}" BasedOn="{StaticResource CustomGroupBoxStyle2}"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
