<UserControl x:Class="MM.Medical.Client.Module.Decontaminate.AddDecontaminateFlow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Ms.Controls;assembly=Ms.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <StackPanel Style="{StaticResource editorFormItem}">
                <TextBlock Text="流程名称" Width="Auto" Style="{StaticResource editorFormItemText}"/>
                <TextBox Text="{Binding Name,UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource editorFormItemInput}"/>
            </StackPanel>

            <Button Click="Save_Click" Content="保存" Margin="0,20,0,0" IsDefault="True"/>
        </StackPanel>
    </Grid>
</UserControl>
