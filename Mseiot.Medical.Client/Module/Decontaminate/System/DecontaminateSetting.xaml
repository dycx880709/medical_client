<UserControl x:Class="MM.Medical.Client.Module.Decontaminate.DecontaminateSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Ms.Controls;assembly=Ms.Controls"
             MinWidth="500" MinHeight="400"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Style="{StaticResource editorFormItem}">
                <TextBlock Text="制卡器串口" Style="{StaticResource editorFormItemText}" Width="100"></TextBlock>
                <ComboBox x:Name="cbSerialPorts" DropDownOpened="SerialPorts_DropDownOpened"></ComboBox>
            </StackPanel>
            <Button Margin="0,10,0,0" Click="Save_Click" Content="保存" />
        </StackPanel>
    </Grid>
</UserControl>
