                            <TextBlock Text="月" Style="{StaticResource editorFormItemText}"/>
                            <ComboBox x:Name="cb_month"/>
                        </StackPanel>
                        <StackPanel Style="{StaticResource editorFormItem}">
                            <TextBlock Text="日" Style="{StaticResource editorFormItemText}"/>
                            <ComboBox x:Name="cb_day"/>
                        </StackPanel>
                    </StackPanel>-->
                    <controls:CustomGroupBox Header="图表类型">
                        <WrapPanel Margin="0,5">
                            <RadioButton Click="ChartType_Click" GroupName="ChartType" Content="曲线图" IsChecked="{Binding ChartType, Converter={StaticResource ObjectEqualParamConverter}, ConverterParameter={x:Static local:ChartType.LineSeries}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            <RadioButton Click="ChartType_Click" GroupName="ChartType" Content="柱形图" IsChecked="{Binding ChartType, Converter={StaticResource ObjectEqualParamConverter}, ConverterParameter={x:Static local:ChartType.Bar}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
                            <RadioButton Click="ChartType_Click" GroupName="ChartType" Content="饼状图" IsChecked="{Binding ChartType, Converter={StaticResource ObjectEqualParamConverter}, ConverterParameter={x:Static local:ChartType.Pie}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </WrapPanel>
                    </controls:CustomGroupBox>
                    <controls:CustomGroupBox Header="筛选条件">
                        <controls:CustomGroupBox.AttachContent>
                            <ControlTemplate>
                                <Button Content="重置" Click="Reset_Click"/>
                            </ControlTemplate>
                        </controls:CustomGroupBox.AttachContent>
                        <StackPanel>
                            <StackPanel Style="{StaticResource editorFormItem}">
                                <TextBlock Text="检查结果" Style="{StaticResource editorFormItemText}"/>
                                <TextBox Text="{Binding ExaminationResult, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            <StackPanel Style="{StaticResource editorFormItem}">
                                <TextBlock Text="检查医生" Style="{StaticResource editorFormItemText}"/>
                                <TextBox Text="{Binding DoctorName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            <StackPanel Style="{StaticResource editorFormItem}">
                                <TextBlock Text="检查诊室" Style="{StaticResource editorFormItemText}"/>
                                <TextBox Text="{Binding CosultingName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                        </StackPanel>
                    </controls:CustomGroupBox>
                    <Button Content="开始统计" Margin="0,20" IsDefault="True" Click="Start_Click"/>
                </StackPanel>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <lvc:CartesianChart x:Name="chart" Grid.Row="0" Margin="5"/>
                    <DataGrid x:Name="dg_examinations" Grid.Row="1" Margin="5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="*" Header="科室名称"/>
                            <DataGridTextColumn Width="*" Header="检查总人数"/>
                            <DataGridTextColumn Width="*" Header="总收入"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </controls:CustomGroupBox>
        <controls:Loading x:Name="loading"/>
    </Grid>
</UserControl>
